generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  lastname String
  password String
  address  String
}

model Product {
  id             Int     @id @default(autoincrement())
  name           String
  description    String
  classification String
  price          Float
  imageUrl       String?
  stock          Int     @default(0)
}
